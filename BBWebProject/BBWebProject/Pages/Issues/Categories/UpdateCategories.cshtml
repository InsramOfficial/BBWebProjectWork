        .btn-container {
            text-align: right;
            margin-top: 20px;
        }

        .btn-add {
            background-color: #03a9f4; /* Sky blue button */
            color: #fff; /* White text */
        }

            .btn-add:hover {
                background-color: #0288d1; /* Darker blue on hover */
            }

        .btn-cancel {
            margin-right: 10px;
        }

        .text-danger {
            color: #dc3545; /* Red color for error messages */
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    <h2 class="text-center mb-4">Update Category Details</h2>
                    <form method="post" asp-page-handler="Update">
                        <div class="form-group">
                            <label asp-for="@Model.category.Name">Name</label>
                            <input asp-for="@Model.category.Name" class="form-control" placeholder="Enter Name">
                            <span class="text-danger" asp-validation-for="@Model.category.Name"></span>
                            <input asp-for="@Model.category.Id" type="hidden" />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.category.Description">Description</label>
                            <input asp-for="@Model.category.Description" class="form-control" placeholder="Enter Description">
                            <span class="text-danger" asp-validation-for="@Model.category.Description"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.category.Slug">Slug</label>
                            <input asp-for="@Model.category.Slug" class="form-control" placeholder="Enter Slug">
                            <span class="text-danger" asp-validation-for="@Model.category.Slug"></span>
                        </div>
                        <div class="btn-container">
                            <button type="button" class="btn btn-secondary btn-cancel"><a asp-page="/Issues/Categories/Index" style="color:white">Cancel</a></button>
                            <button type="submit" class="btn btn-success">Update Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
