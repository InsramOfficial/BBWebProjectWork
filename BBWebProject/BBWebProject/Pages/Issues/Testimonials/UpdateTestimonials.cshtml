@page
@model BBWebProject.Pages.Issues.Testimonials.UpdateTestimonialsModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Testimonials</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styling for form */
        .form-container {
            background-color: #e3f2fd; /* Light blue background */
            padding: 20px;
            border-radius: 10px;
        }

        /* Custom styling for form elements */
        .form-control {
            background-color: #fff; /* White background */
        }

            .form-control:focus {
                border-color: #03a9f4; /* Focus color - Sky blue */
                box-shadow: 0 0 0 0.2rem rgba(3, 169, 244, 0.25);
            }

        .btn-container {
            text-align: right;
            margin-top: 20px;
        }

        .btn-add {
            background-color: #03a9f4; /* Sky blue button */
            color: #fff; /* White text */
        }

            .btn-add:hover {
                background-color: #0288d1; /* Darker blue on hover */
            }

        .btn-cancel {
            margin-right: 10px;
        }

        .text-danger {
            color: #dc3545; /* Red color for error messages */
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    <h2 class="text-center mb-4">Update Testimonials</h2>
                    <form method="post" asp-page-handler="Update" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="@Model.testimonial.Name">Name</label>
                            <input asp-for="@Model.testimonial.Name" class="form-control" placeholder="Enter Name">
                            <input asp-for="@Model.testimonial.ID" type="hidden" />
                            <input asp-for="@Model.testimonial.Image" type="hidden" />
                            <span class="text-danger" asp-validation-for="@Model.testimonial.Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.testimonial.Profession">Profession</label>
                            <textarea class="form-control" asp-for="@Model.testimonial.Profession" rows="3" placeholder="Enter Profession"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.testimonial.Profession"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.testimonial.Review">Review</label>
                            <input asp-for="@Model.testimonial.Review" class="form-control" id="price" placeholder="Enter Review">
                            <span class="text-danger" asp-validation-for="@Model.testimonial.Review"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.testimonial.Photo">Image</label>
                            <input asp-for="@Model.testimonial.Photo" class="form-control-file" id="image">
                            <span class="text-danger"></span>
                        </div>
                        <div class="btn-container">
                            <button type="button" class="btn btn-secondary btn-cancel"><a asp-page="/Issues/Testimonials/Index" style="color:white">Cancel</a></button>
                            <button type="submit" class="btn btn-success">Update Testimonials</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>